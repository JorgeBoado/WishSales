<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/paleta0"
    android:gravity="top"
    android:orientation="vertical">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="47dp"
            android:layout_marginEnd="8dp"
            android:gravity="center"
            android:text="@string/page_index_library"
            android:textAllCaps="true"
            android:textColor="@color/paleta3"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/library_funds"
            app:layout_constraintHorizontal_bias="0.85"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/library_funds"
            android:layout_width="93dp"
            android:layout_height="47dp"
            android:layout_marginEnd="24dp"
            android:gravity="center"
            android:text="@string/library_game_funds"
            android:textColor="@color/paleta4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>

    <android.support.v7.widget.RecyclerView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/library_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>